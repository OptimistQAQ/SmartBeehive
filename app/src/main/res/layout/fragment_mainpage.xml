<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainFragment">

    <ScrollView
        android:id="@+id/weatherLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/now"/>

            <LinearLayout style="@style/wrap_layout"
                android:layout_marginTop="20dp">

                <!-- 全圆角 历史浏览-->
                <LinearLayout
                    android:id="@+id/menu_bee_hum"
                    style="@style/single_layout">

                    <TextView
                        style="@style/usertext"
                        android:text="蜂箱湿度："/>

                    <TextView
                        android:text="湿度"
                        android:id="@+id/text222"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout style="@style/wrap_layout"
                >
                <!-- 全圆角  个人中心-->
                <LinearLayout
                    android:id="@+id/menu_soil_hum"
                    style="@style/single_layout">

                    <TextView
                        style="@style/usertext"
                        android:text="土壤湿度"/>
                    <TextView
                        android:text="土壤"
                        android:id="@+id/text333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </LinearLayout>


            <!-- 全圆角  关于-->
            <LinearLayout style="@style/wrap_layout">

                <LinearLayout
                    android:id="@+id/menu_light"
                    style="@style/single_layout">

                    <TextView
                        style="@style/usertext"
                        android:text="光照强度"/>

                    <TextView
                        android:text="光照"
                        android:id="@+id/text444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <!-- 全圆角  设置-->
            <LinearLayout style="@style/wrap_layout">

                <LinearLayout
                    android:id="@+id/menu_duoji"
                    style="@style/single_layout"
                    >

                    <TextView
                        style="@style/usertext"
                        android:text="舵机状态"/>

                    <TextView
                        android:text="舵机"
                        android:id="@+id/text555"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <!-- 全圆角  设置-->
            <LinearLayout style="@style/wrap_layout">

                <LinearLayout
                    android:id="@+id/menu_jidianqi"
                    style="@style/single_layout"
                    >

                    <TextView
                        style="@style/usertext"
                        android:text="继电器状态"/>

                    <TextView
                        android:text="继电器"
                        android:id="@+id/text666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
            <!-- 全圆角  设置-->
            <LinearLayout style="@style/wrap_layout">

                <LinearLayout
                    android:id="@+id/menu_led"
                    style="@style/single_layout"
                    >

                    <TextView
                        style="@style/usertext"
                        android:text="Led状态"/>

                    <TextView
                        android:text="LED"
                        android:id="@+id/text777"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <!-- 全圆角  设置-->
            <LinearLayout style="@style/wrap_layout">

                <LinearLayout
                    android:id="@+id/menu_MAC"
                    style="@style/single_layout"
                    >

                    <TextView
                        style="@style/usertext"
                        android:text="MAC地址"/>

                    <TextView
                        android:text="MAC"
                        android:id="@+id/text888"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>