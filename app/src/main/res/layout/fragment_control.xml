<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentControl">

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recyclerView_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />
    <Button

        android:id="@+id/shuaxin"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="340dp"
        android:layout_marginRight="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/shuxin"
        android:visibility="visible"
        />
    <Button

        android:id="@+id/shoudong"
        android:layout_marginRight="30dp"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="340dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/hand"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/scan"
        android:layout_marginRight="30dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="340dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/scan"
        android:visibility="gone"

        />
    <Button
        android:id="@+id/addbtn"
        android:layout_marginRight="30dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="340dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/add"
        />
    <Button
        android:id="@+id/cccbtn"
        android:layout_marginRight="30dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="340dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ccc"
        android:visibility="gone"

        />

</FrameLayout>