<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical">



        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginBottom="5dp"
            android:background="#FFFF00" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/fengxaingtupian"
            android:layout_marginTop="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/beehive"
            />
        <ImageView
            android:id="@+id/baojing1"
            android:layout_marginTop="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/baojing"
            android:visibility="gone"
            />
        <LinearLayout

            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/fengxaing1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="蜂箱"
        android:textSize="25dp"
        />

            <TextView
                android:id="@+id/fxzhaungtai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fengxaing1"
                android:layout_marginTop="5dp"

                android:textSize="40dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>